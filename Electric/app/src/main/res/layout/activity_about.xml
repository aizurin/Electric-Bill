<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#E3F2FD">

    <!-- Content Section -->
    <ScrollView
        android:id="@+id/content_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/copyright_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_profilepic"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:contentDescription="Developer's Photo" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Aizurin Nellisa binti Azril Rizal"
                android:textColor="#050505"
                android:textSize="18sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvStudentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Student ID: 2023607028"
                android:textColor="#050505"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class: RCDCS2405B"
                android:textColor="#050505"
                android:textSize="18sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information: This application is used to calculate electric bills with specific blocks and rebate."
                android:textColor="#050505"
                android:textSize="18sp"
                android:layout_marginBottom="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GitHub Repository:"
                android:textColor="#050505"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvGitHubLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://github.com/YourRepo"
                android:textSize="18sp"
                android:autoLink="web"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Copyright Section -->
    <TextView
        android:id="@+id/copyright_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Â© 2024 Electric Bill Estimator. All rights reserved."
        android:textColor="#616161"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="10dp" />
</RelativeLayout>

